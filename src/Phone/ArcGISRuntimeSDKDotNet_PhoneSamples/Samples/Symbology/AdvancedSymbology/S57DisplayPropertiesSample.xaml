<Page
    x:Class="ArcGISRuntimeSDKDotNet_StoreSamples.Samples.Symbology.AdvancedSymbology.S57DisplayPropertiesSample"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:ArcGISRuntimeSDKDotNet_StoreSamples.Common"
    xmlns:esri="using:Esri.ArcGISRuntime.Controls"
    xmlns:lyr="using:Esri.ArcGISRuntime.Layers"
    xmlns:geo="using:Esri.ArcGISRuntime.Geometry"
    xmlns:sym="using:Esri.ArcGISRuntime.Symbology"
    xmlns:data="using:Esri.ArcGISRuntime.Data">

	<Page.Resources>
		<Style x:Key="headerTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubheaderTextBlockStyle}">
			<Setter Property="Margin" Value="5,5,10,5" />
			<Setter Property="FontWeight" Value="Bold" />
		</Style>
	</Page.Resources>

	<!-- Application command bar -->
	<Page.BottomAppBar>
		<CommandBar IsOpen="True">
			<AppBarButton Icon="List" Label="Scheme">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Color Scheme:" Style="{StaticResource SubheaderTextBlockStyle}"
										   Width="200"/>
								<ComboBox x:Name="colorSchemes"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=ColorScheme, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Depth Units:" Style="{StaticResource SubheaderTextBlockStyle}"
										    Width="200"/>
								<ComboBox x:Name="dislayDepthUnits"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=DisplayDepthUnits, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Area:" Style="{StaticResource SubheaderTextBlockStyle}"
										    Width="200"/>
								<ComboBox x:Name="areaSymbolizationTypes"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=AreaSymbolizationType, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Point:" Style="{StaticResource SubheaderTextBlockStyle}" 
										   Width="200"/>
								<ComboBox x:Name="pointSymbolizationTypes"
										  VerticalAlignment="Center"
                                          SelectedItem="{Binding Path=PointSymbolizationType, Mode=TwoWay}"
										  Width="160" />
							</StackPanel>

							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Category:" Style="{StaticResource SubheaderTextBlockStyle}" 
										   Width="200"/>
								<ComboBox x:Name="displayCategory"
									SelectedItem="{Binding Path=DisplayCategory, Mode=TwoWay}" 
									Width="160" />
							</StackPanel>
						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>

			<AppBarButton Icon="Bullets" Label="Depth">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel>
							<StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Depth Shades:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<ComboBox x:Name="depthShades"
										 VerticalAlignment="Center"
                                         SelectedItem="{Binding Path=DepthShades, Mode=TwoWay}" Width="160"  />
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Shallow:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=ShallowContourMeters}" Width="160"/>
								</StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Safet	y:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=SafetyContourMeters}" Width="160"/>
								</StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Deep:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=DeepContourMeters}" Width="160"/>
								</StackPanel>
							</StackPanel>
						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>

			<AppBarButton Icon="Font" Label="Text groups">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel Margin="10">
							<ToggleSwitch Header="Important Text" IsOn="{Binding Path=TextGroupProperties.ImportantText}" />
							<ToggleSwitch Header="Light Descriptions" 
											  IsOn="{Binding Path=TextGroupProperties.LightDescriptionString}" />
							<ToggleSwitch Header="Nature Of Seabed" 
											  IsOn="{Binding Path=TextGroupProperties.NatureOfSeabed}" />
							<ToggleSwitch Header="Magnetic Variation And Swept Depth" 
											  IsOn="{Binding Path=TextGroupProperties.MagneticVariationAndSweptDepth}" />
							<ToggleSwitch Header="Names For Position Reporting" 
											  IsOn="{Binding Path=TextGroupProperties.NamesForPositionReporting}" />
							<ToggleSwitch Header="Notes On Chart Data" 
											  IsOn="{Binding Path=TextGroupProperties.NoteOnChartData}" />
							<ToggleSwitch Header="Geographic Names" 
											  IsOn="{Binding Path=TextGroupProperties.GeographicNames}" />
							<ToggleSwitch Header="Berth Number" 
											  IsOn="{Binding Path=TextGroupProperties.BerthNumber}" />

						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>
		</CommandBar>
	</Page.BottomAppBar>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<esri:MapView x:Name="mapView" 
					  LayerLoaded="mapView_LayerLoaded">
			<esri:Map>
				<lyr:ArcGISTiledMapServiceLayer ID="Ocean_BaseMap"
                        ServiceUri="http://services.arcgisonline.com/ArcGIS/rest/services/Ocean_Basemap/MapServer" />

				<!-- Using group layer to group all Hydrographic layers -->
				<lyr:GroupLayer ID="Hydrographic">
				</lyr:GroupLayer>
			</esri:Map>
		</esri:MapView>
	</Grid>
</Page>
