<Page
    x:Class="ArcGISRuntimeSDKDotNet_StoreSamples.Samples.LocationDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ArcGISRuntimeSDKDotNet_StoreSamples.Samples"
	xmlns:esri="using:Esri.ArcGISRuntime.Controls"  
    xmlns:lyr="using:Esri.ArcGISRuntime.Layers"
    xmlns:loc="using:Esri.ArcGISRuntime.Location"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <loc:LocationDisplay x:Key="locationDisplaySettings"
                                      IsEnabled="True" 
                                      AutoPanMode="Off"  />
    </Page.Resources>

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">

        <esri:MapView x:Name="mapView1" LocationDisplay="{StaticResource locationDisplaySettings}">
            <esri:Map  >
                <lyr:ArcGISTiledMapServiceLayer
				ServiceUri="http://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer" />
            </esri:Map>
        </esri:MapView>

        <Border Margin="20"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Background="#CC000000"
				Padding="20" MaxWidth="300">
            <StackPanel >
                <TextBlock Text="Location Display Settings" FontWeight="Bold" />
                <ToggleSwitch Header="Enabled"
                              IsOn="{Binding IsEnabled, Source={StaticResource locationDisplaySettings}, Mode=TwoWay}"
                              />
                <TextBlock Text="Auto Pan Mode" />
                <ComboBox SelectedItem="{Binding AutoPanMode, Source={StaticResource locationDisplaySettings}, Mode=TwoWay}">
                    <loc:AutoPanMode>Off</loc:AutoPanMode>
                    <loc:AutoPanMode>Default</loc:AutoPanMode>
                    <loc:AutoPanMode>Navigation</loc:AutoPanMode>
                    <loc:AutoPanMode>CompassNavigation</loc:AutoPanMode>
                </ComboBox>
                <TextBlock Text="Location Provider" />
                <ComboBox x:Name="providerSelector" SelectionChanged="LocationProvider_SelectionChanged">
                    <ComboBoxItem IsSelected="True">System Provider</ComboBoxItem>
                    <ComboBoxItem>Random Simulator</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Border>
    </Grid>

</Page>