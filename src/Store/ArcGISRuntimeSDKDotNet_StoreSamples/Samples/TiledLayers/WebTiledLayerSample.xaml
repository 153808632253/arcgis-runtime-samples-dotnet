<Page
    x:Class="ArcGISRuntimeSDKDotNet_StoreSamples.Samples.WebTiledLayerSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:esri="using:Esri.ArcGISRuntime.Controls"
    xmlns:esriLayers="using:Esri.ArcGISRuntime.Layers">

    <Grid>
        <esri:MapView x:Name="mapView1">
            <esri:Map >
                <esriLayers:WebTiledLayer ID="webTiledLayer1" />
            </esri:Map>
        </esri:MapView>

        <Border BorderBrush="Black" BorderThickness="1" Background="White" 
                Margin="20" HorizontalAlignment="Right" VerticalAlignment="Top">
            <ComboBox x:Name="webTiledLayerComboBox1" Width="300"                  
                  SelectionChanged="webTiledLayerComboBox1_SelectionChanged"/>
        </Border>
    </Grid>
</Page>
