<Page
    x:Class="ArcGISRuntimeSDKDotNet_StoreSamples.Samples.Symbology.AdvancedSymbology.S57DisplayPropertiesSample"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:ArcGISRuntimeSDKDotNet_StoreSamples.Common"
    xmlns:esri="using:Esri.ArcGISRuntime.Controls"
    xmlns:lyr="using:Esri.ArcGISRuntime.Layers"
    xmlns:geo="using:Esri.ArcGISRuntime.Geometry"
    xmlns:sym="using:Esri.ArcGISRuntime.Symbology"
    xmlns:data="using:Esri.ArcGISRuntime.Data">

	<Page.Resources>
		<Style x:Key="overlayBorderStyle" TargetType="Border">
			<Setter Property="BorderBrush" Value="Transparent" />
			<Setter Property="Background" Value="#CC000000" />
			<Setter Property="BorderThickness" Value="2" />
			<Setter Property="Margin" Value="30" />
			<Setter Property="Padding" Value="20" />
			<Setter Property="VerticalAlignment" Value="Top" />
		</Style>
		<Style x:Key="headerTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource SubheaderTextBlockStyle}">
			<Setter Property="Margin" Value="5,5,10,5" />
			<Setter Property="FontWeight" Value="Bold" />
		</Style>
	</Page.Resources>

	<!-- Application command bar -->
	<Page.BottomAppBar>
		<CommandBar IsOpen="True">
			<AppBarButton Icon="List" Label="Scheme">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Color Scheme:" Style="{StaticResource SubheaderTextBlockStyle}"
										   Width="200"/>
								<ComboBox x:Name="colorSchemes"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=ColorScheme, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Depth Units:" Style="{StaticResource SubheaderTextBlockStyle}"
										    Width="200"/>
								<ComboBox x:Name="dislayDepthUnits"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=DisplayDepthUnits, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Area:" Style="{StaticResource SubheaderTextBlockStyle}"
										    Width="200"/>
								<ComboBox x:Name="areaSymbolizationTypes"
										  VerticalAlignment="Center"
										  SelectedItem="{Binding Path=AreaSymbolizationType, Mode=TwoWay}" 
										  Width="160" />
							</StackPanel>
							<StackPanel Orientation="Horizontal" Margin="5">
								<TextBlock Text="Point:" Style="{StaticResource SubheaderTextBlockStyle}" 
										   Width="200"/>
								<ComboBox x:Name="pointSymbolizationTypes"
										  VerticalAlignment="Center"
                                          SelectedItem="{Binding Path=PointSymbolizationType, Mode=TwoWay}" Width="160" />
							</StackPanel>
						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>

			<AppBarButton Icon="Admin" Label="Category">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel>
							<ComboBox x:Name="displayCategory"
									SelectedItem="{Binding Path=DisplayCategory, Mode=TwoWay}" 
									Width="200" />
						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>

			<AppBarButton Icon="Bullets" Label="Depth">
				<AppBarButton.Flyout>
					<Flyout>
						<StackPanel>
							<StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Depth Shades:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<ComboBox x:Name="depthShades"
										 VerticalAlignment="Center"
                                         SelectedItem="{Binding Path=DepthShades, Mode=TwoWay}" Width="100"  />
								</StackPanel>

								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Shallow:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=ShallowContourMeters}" Width="100"/>
								</StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Safety:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=SafetyContourMeters}" Width="100"/>
								</StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="Deep:" 
											   Style="{StaticResource SubheaderTextBlockStyle}" 
											   Width="200"/>
									<TextBox Text="{Binding Path=DeepContourMeters}" Width="100"/>
								</StackPanel>
							</StackPanel>
						</StackPanel>
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>

			<AppBarButton Icon="Font" Label="Text groups">
				<Button.Flyout>
					<MenuFlyout>
						<ToggleMenuFlyoutItem Text="Important Text" 
											  IsChecked="{Binding Path=TextGroupProperties.ImportantText}" />
						<ToggleMenuFlyoutItem Text="Light Descriptions" 
											  IsChecked="{Binding Path=TextGroupProperties.LightDescriptionString}" />
						<ToggleMenuFlyoutItem Text="Nature Of Seabed" 
											  IsChecked="{Binding Path=TextGroupProperties.NatureOfSeabed}" />
						<ToggleMenuFlyoutItem Text="Magnetic Variation And Swept Depth" 
											  IsChecked="{Binding Path=TextGroupProperties.MagneticVariationAndSweptDepth}" />
						<ToggleMenuFlyoutItem Text="Names For Position Reporting" 
											  IsChecked="{Binding Path=TextGroupProperties.NamesForPositionReporting}" />
						<ToggleMenuFlyoutItem Text="Notes On Chart Data" 
											  IsChecked="{Binding Path=TextGroupProperties.NoteOnChartData}" />
						<ToggleMenuFlyoutItem Text="Geographic Names" 
											  IsChecked="{Binding Path=TextGroupProperties.GeographicNames}" />
						<ToggleMenuFlyoutItem Text="Berth Number" 
											  IsChecked="{Binding Path=TextGroupProperties.BerthNumber}" />
					</MenuFlyout>
				</Button.Flyout>
			</AppBarButton>


			<AppBarButton Icon="View" Label="View groups">
				<Button.Flyout>
					<MenuFlyout>
						<ToggleMenuFlyoutItem Text="Unknown objects" IsChecked="{Binding Path=ViewGroupProperties.UnknownObjects}" />
						<ToggleMenuFlyoutItem Text="Chart data coverage" IsChecked="{Binding Path=ViewGroupProperties.ChartDataCoverage}" />
						<ToggleMenuFlyoutItem Text="Standard land areas" IsChecked="{Binding Path=ViewGroupProperties.StandardLandAreas}" />
						<ToggleMenuFlyoutItem Text="Area Of depth less than safety contour" IsChecked="{Binding Path=ViewGroupProperties.AreaOfDepthLessThanSafetyContour}" />
						<ToggleMenuFlyoutItem Text="Water and seabed features" IsChecked="{Binding Path=ViewGroupProperties.WaterAndSeabedFeatures}" />
						<ToggleMenuFlyoutItem Text="Traffic routes" IsChecked="{Binding Path=ViewGroupProperties.TrafficRoutes}" />
						<ToggleMenuFlyoutItem Text="Cautionary areas" IsChecked="{Binding Path=ViewGroupProperties.CautionaryAreas}" />
						<ToggleMenuFlyoutItem Text="Information areas" IsChecked="{Binding Path=ViewGroupProperties.InformationAreas}" />
						<ToggleMenuFlyoutItem Text="Buoys and beacons" IsChecked="{Binding Path=ViewGroupProperties.BuoysAndBeacons}" />
						<ToggleMenuFlyoutItem Text="Lights" IsChecked="{Binding Path=Lights}" />
						<ToggleMenuFlyoutItem Text="Fog signals" IsChecked="{Binding Path=ViewGroupProperties.FogSignals}" />
						<ToggleMenuFlyoutItem Text="Radar" IsChecked="{Binding Path=ViewGroupProperties.Radar}" />
						<ToggleMenuFlyoutItem Text="Services" IsChecked="{Binding Path=ViewGroupProperties.Services}" />
						<ToggleMenuFlyoutItem Text="Information about chart data" IsChecked="{Binding Path=ViewGroupProperties.InformationAboutChartData}" />
						<ToggleMenuFlyoutItem Text="Other land areas" IsChecked="{Binding Path=ViewGroupProperties.OtherLandAreas}" />
						<ToggleMenuFlyoutItem Text="Soundings" IsChecked="{Binding Path=ViewGroupProperties.Soundings}" />
						<ToggleMenuFlyoutItem Text="Depth contours currents magnetics" IsChecked="{Binding Path=ViewGroupProperties.DepthContoursCurrentsMagnetics}" />
						<ToggleMenuFlyoutItem Text="Seabed and obstructions" IsChecked="{Binding Path=ViewGroupProperties.SeabedAndObstructions}" />
						<ToggleMenuFlyoutItem Text="Services and small craft facilities" IsChecked="{Binding Path=ViewGroupProperties.ServicesAndSmallCraftFacilities}" />
					</MenuFlyout>
				</Button.Flyout>
			</AppBarButton>
		</CommandBar>
	</Page.BottomAppBar>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<esri:MapView x:Name="mapView" 
					  LayerLoaded="mapView_LayerLoaded">
			<esri:Map>
				<lyr:ArcGISTiledMapServiceLayer ID="Ocean_BaseMap"
                        ServiceUri="http://services.arcgisonline.com/ArcGIS/rest/services/Ocean_Basemap/MapServer" />

				<!-- Using group layer to group all Hydrographic layers -->
				<lyr:GroupLayer ID="Hydrographic">
				</lyr:GroupLayer>
			</esri:Map>
		</esri:MapView>
	</Grid>
</Page>
